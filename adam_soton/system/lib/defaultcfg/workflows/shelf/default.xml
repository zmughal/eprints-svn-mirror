<?xml version="1.0" encoding="utf-8"?>

<workflow xmlns="http://eprints.org/ep3/workflow" xmlns:epc="http://eprints.org/ep3/control">

  <flow>
    <stage ref="default"/>
  </flow>
   
  <stage name="default">
    <component type="Field::Multi">
      <title>Details</title>
      <field ref="title"/>
      <field ref="description"/>
      <field ref="public" required="yes"/>
      <field ref="items"/>
<!--some sexy input rendering of items in the shelf-->
    </component>

    <component type="Field::Multi">
      <title>Access</title>
      <field ref="adminids"/>
      <field ref="editorids"/>
      <field ref="readerids"/>
    </component>

  </stage>
</workflow>
