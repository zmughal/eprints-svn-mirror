#!/usr/bin/perl -w

######################################################################
#
#  Small utility to generate static HTML from the site code
#
#   Usage:  write_template <title>
#
#####################################################################

use EPrints::HTMLRender;
use EPrints::Session;

if( $#ARGV != 0 )
{
	die "Usage: write_template <title>\n";
}

my $session = EPrints::Session->new( 1 );

print $session->{render}->start_html( $ARGV[0] );

print "<!-- CONTENT STARTS HERE -->\n\n";
print "\n\n<!-- CONTENT ENDS HERE -->\n\n";

print $session->{render}->end_html();

$session->terminate();
