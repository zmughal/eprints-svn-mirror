use EPrints::Session;
use EPrints::HTMLRender;

use EPrintSite::SiteInfo;

use strict;


my $session = new EPrints::Session;


my $subjectid = $session->{render}->param( "subject" );

my $subject = new EPrints::Subject( $session, $subjectid );

if( !defined $subject )
{
	$session->{render}->render_error( "Unrecognised subject ID", "", "" );
}
else
{
	print $session->{render}->start_html( "Subject View Test" );

	print "<HR>\n";

	print $session->{render}->subject_tree( $subject );

	print "<HR>\n";

	print $session->{render}->end_html();
}

$session->terminate();

