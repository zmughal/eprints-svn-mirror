      <field name="volume" />
      <field name="place_of_pub" />
      <field name="publisher" required="yes" />
      <field name="pages" />
      <field name="id_number" />
      <field name="series" />
      <field name="number" />
      <field name="isbn" />

      <field name="date_issue" />
