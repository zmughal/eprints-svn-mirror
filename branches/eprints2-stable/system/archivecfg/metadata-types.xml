      <field name="refereed" required="yes" />

      <page name="abstract" />
      <field name="abstract" />
      <field name="referencetext" />
      <field name="keywords" />

      <page name="subjects" />
      <field name="subjects" required="yes" />

      <page name="notes" />
      <field name="note" />
      <field name="suggestions" />
