<?xml version="1.0" ?>

<metadatatypes>

  <dataset name="document">
    <type name="html" />
    <type name="pdf" />
    <type name="ps" />
    <type name="ascii" />
    <type name="other" />
    <type name="coverimage" />
  </dataset>

  <dataset name="security">
    <type name="" />
    <type name="validuser" />
    <type name="staffonly" />
  </dataset>
  
  <dataset name="eprint">

    <type name="article">
      <page name="core" />
      <field name="creators" required="yes" />
