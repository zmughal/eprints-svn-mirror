      <field name="refereed" required="yes" />

      <page name="abstract" />
      <field name="abstract" />
      <field name="referencetext" />
      <field name="keywords" />

      <page name="subjects" />
      <field name="subjects" required="yes" />

      <page name="notes" />
      <field name="note" />
      <field name="suggestions" />
    </type>

    <type name="book_section">
      <page name="core" />
      <field name="creators" required="yes" />
      <field name="title" required="yes" />
      <field name="pagerange" />
      <field name="editors" />
