use EPrints::Session;
use EPrints::User;

use strict;
#cjg Nice Command Options
#cjg man page
 
# Set STDOUT to auto flush (without needing a \n)
$|=1;

EPrints::Session::start( $ARGV[0] ) or exit( 1 );

my $user_ds = &ARCHIVE->get_dataset( "user" );
$user_ds->map( \&print_user_email );
exit;

sub print_user_email
{
	my( $dataset, $user ) = @_;
	
	print $user->get_value( "email" )."\n";
}
