use EPrints::User;
use EPrints::Database;
use EPrints::Session;
use EPrints::UserForm;

use strict;

EPrints::Session::start;

# Any user can view this page, but most BE a user.
if( !&SESSION->auth_check )
{
	exit( 0 );
}
my $userform = new EPrints::UserForm( 
	&ARCHIVE->get_conf( "userhome" ),
	0,
	undef,
	"record" );

$userform->process();
exit;

