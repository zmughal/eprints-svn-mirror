<?xml version="1.0" ?>

<metadatatypes>

  <dataset name="document">
    <type name="html" />
    <type name="pdf" />
    <type name="ps" />
    <type name="ascii" />
    <type name="image" />
    <type name="other" />
  </dataset>

  <dataset name="security">
    <type name="" />
    <type name="validuser" />
    <type name="staffonly" />
  </dataset>
  
  <dataset name="eprint">
    <type name="article" />
    <type name="book_section" />
    <type name="monograph" />
    <type name="conference_item" />
    <type name="book" />
    <type name="thesis" />
    <type name="patent" />
    <type name="other" />
  </dataset>

<!-- don't make username editable -->
<!-- don't make usertype editable -->

  <dataset name="user">
    <type name="user" >
      <field name="password" />
 <!--     <field name="lang" /> -->
      <field name="usertype" staffonly="yes"/>
      <field name="username" staffonly="yes"/>
      <field name="email" staffonly="yes" />
      <field name="hideemail" />
      <field name="name" required="yes" />
      <field name="dept" />
      <field name="org" />
      <field name="address" />
      <field name="country" />
      <field name="os" />
      <field name="url" />
    </type>
    <type name="editor" >
      <field name="password" />
 <!--     <field name="lang" /> -->
      <field name="usertype" staffonly="yes" />
      <field name="username" staffonly="yes"/>
      <field name="email" staffonly="yes" />
      <field name="hideemail" />
      <field name="name" required="yes" />
      <field name="dept" />
      <field name="org" />
      <field name="address" />
      <field name="country" />
      <field name="os" />
      <field name="url" />
      <field name="editperms" staffonly="yes" />
      <field name="frequency" required="yes" />
      <field name="mailempty" required="yes" />
    </type>
    <type name="admin" >
      <field name="password" />
 <!--     <field name="lang" /> -->
      <field name="usertype" staffonly="yes" />
      <field name="username" staffonly="yes" />
      <field name="email" staffonly="yes" />
      <field name="hideemail" />
      <field name="name" required="yes" />
      <field name="dept" />
      <field name="org" />
      <field name="address" />
      <field name="country" />
      <field name="os" />
      <field name="url" />
      <field name="editperms" />
      <field name="frequency" required="yes" />
      <field name="mailempty" required="yes" />
    </type>
  </dataset>

</metadatatypes>

