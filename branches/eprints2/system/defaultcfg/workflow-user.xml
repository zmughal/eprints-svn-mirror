<?xml version="1.0" encoding="utf-8"?>
<workflow xmlns="http://eprints.org/ep2/workflow" xmlns:ep="http://eprints.org/ep2/">
  <flow>
    <stage ref="default"/>
  </flow>
  <stage name="default">
    <component><field ref="password"/></component>
    <component><ep:ifmatch name="$STAFF_ONLY" value="TRUE"><field ref="usertype"/></ep:ifmatch></component>
    <component><ep:ifmatch name="$STAFF_ONLY" value="TRUE"><field ref="username"/></ep:ifmatch></component>
    <component><ep:ifmatch name="$STAFF_ONLY" value="TRUE"><field ref="email"/></ep:ifmatch></component>
    <component><field ref="hideemail"/></component>
    <component><field ref="name"><required/></field></component>
    <component><field ref="dept"/></component>
    <component><field ref="org"/></component>
    <component><field ref="address"/></component>
    <component><field ref="country"/></component>
    <component><field ref="os"/></component>
    <component><field ref="url"/></component>
    <ep:ifmatch name="type" value="editor">
      <component><ep:ifmatch name="$STAFF_ONLY" value="TRUE"><field ref="editperms"/></ep:ifmatch></component>
      <component><field ref="frequency"><required/></field></component>
      <component><field ref="mailempty"><required/></field></component>
    </ep:ifmatch>
    <ep:ifmatch name="type" value="admin">
      <component><field ref="editperms"/></component>
      <component><field ref="frequency"><required/></field></component>
      <component><field ref="mailempty"><required/></field></component>
    </ep:ifmatch>
  </stage>
</workflow>
