#!/usr/bin/perl -w

######################################################################
#
#  List the emails of all archive users
#
#  Usage: list_user_emails
#
######################################################################
#
#  __COPYRIGHT__
#
# Copyright 2000-2008 University of Southampton. All Rights Reserved.
# 
# __LICENSE__
#
######################################################################

use EPrints::Session;
use EPrints::User;

use strict;
 
my $session = new EPrints::Session( 1 );
exit unless( defined $session );

my @users = EPrints::User::retrieve_users( $session );

foreach (@users)
{
	print $_->{email} . "\n";
}

$session->terminate();
