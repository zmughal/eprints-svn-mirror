use EPrints::Session;
use EPrints::HTMLRender;
use EPrints::EPrint;
use EPrints::SearchField;
use EPrints::SearchExpression;
use EPrints::SearchForm;
use EPrints::MetaInfo;

use strict;

my $session = new EPrints::Session;

my @metafields = EPrints::SearchExpression::make_meta_fields(
	"users",
	\@EPrintSite::SiteInfo::user_search_fields );

my $searchform = new EPrints::SearchForm(
	$session,
	"users",
	$EPrints::Database::table_user,
	1,
	\@metafields,
	"Staff User Search",
	"",
	\%EPrintSite::SiteInfo::user_order_methods,
	$EPrintSite::SiteInfo::default_user_order );

$searchform->process();

$session->terminate();
