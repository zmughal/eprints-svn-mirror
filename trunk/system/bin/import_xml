use EPrints::Session;
use EPrints::HTMLRender;
use EPrints::ImportXML;
use strict;

my $session = new EPrints::Session( 1 );

EPrints::ImportXML::import_file( $session , "/tmp/data.xml" , \&deal );

$session->terminate();

exit;

sub deal 
{
	my( $session , $eprint ) = @_;
	print $session->{render}->render_eprint_citation( $eprint, 0, 0)."\n";
	print "------------\n";
}

