use EPrints::User;
use EPrints::HTMLRender;
use EPrints::Database;
use EPrints::Session;
use EPrints::EPrint;
use EPrints::SubmissionForm;

use strict;


######################################################################
#
# Session initialisation
#
######################################################################

my $session = new EPrints::Session;
Apache::exit( 0 ) unless( defined $session );

# Any user can view this page, but most BE a user.
if( !$session->auth_check )
{
	$session->terminate();
	Apache::exit( 0 );
}

my $user = $session->current_user;

my $fullname = $user->full_name();

my $probs = $user->validate();
my $valid_user = ( $#{$probs} == -1 );

######################################################################
#
# Render page
#
######################################################################

my( $p, $page, $dl, $dt, $dd, $a );

$page = $session->make_doc_fragment();

### Welcome author blurb
$p = $session->make_element( "p" );
$p->appendChild( 
	$session->html_phrase( 
		"welcome",
		sitename => $session->make_text( 
			$session->get_site()->getConf( "sitename" ) ) ) );
$page->appendChild( $p );


if( $valid_user )
{ #cjg THIS IS NOT DONE
	### Workspace
	&render_workspace( $session, $user );

	### Pending
	&show_pending( $session, $user );

	print "<HR>\n";
}

$dl = $session->make_element( "dl" );

if( $valid_user )
{ #cjg THIS IS NOT DONE
	### View items in archive
	print "<DL><DT><STRONG><A HREF=\"review\">";
	$session->{lang}->phrase( "H:review" );
	print "</A></STRONG></DT>\n";
	print "<DD><P>";
	$session->{lang}->phrase( "H:review_info" );
	if( $session->{site}->{allow_user_removal} ) {
		$session->{lang}->phrase( "H:remove_info" );
	}
	print "</P></DD>\n";
}

### Change author record

$dt = $session->make_element( "dt" );
$a = $session->make_element( "a", href => "record" );
$a->appendChild( $session->html_phrase( "change" ) );
$dt->appendChild( $a );
$dl->appendChild( $dt );

$dd = $session->make_element( "dd" );
$p = $session->make_element( "p" );
if( $valid_user )
{
	$p->appendChild( $session->html_phrase( "change_info" ) );
}
else
{
	### User needs to update their record
	$p->appendChild( $session->html_phrase( "before" ) );
}
$dd->appendChild( $p );
$dl->appendChild( $dd );
	
### Change subscription options
if( $user->has_priv( "subscription" ) )
{
	$dt = $session->make_element( "dt" );
	$a = $session->make_element( "a", href => "subscribe" );
	$a->appendChild( $session->html_phrase( "sub_opts" ) );
	$dt->appendChild( $a );
	$dl->appendChild( $dt );

	$dd = $session->make_element( "dd" );
	$p = $session->make_element( "p" );
	$p->appendChild( $session->html_phrase( "sub_opts_info" ) );
	$dd->appendChild( $p );
	$dl->appendChild( $dd );
}


$page->appendChild( $dl );

$session->build_page( 
		$session->phrase( "user_home", name => $fullname ),
		$page );
$session->send_page();

$session->terminate();



######################################################################
#
# render_workspace( $session, $user )
#
#  This puts all of the user's items in the inbox table in a form.
#  The buttons will POST stuff to the submit script, with the possible
#  actions:
#
#   New     (Create a new EPrint)
#   Edit    (Edit a selected EPrint)
#   Clone   (Clone the selected EPrint)
#   Delete  (Delete the selected EPrint)
#   Deposit (Submit the selected EPrint to the archive)
#
#
#  If the user has no items in the inbox, a single button is drawn,
#  Allowing them to start the upload process.
#
######################################################################

sub render_workspace
{
	my( $session, $user ) = @_;

	### Get the actual items in the workspace
	my @eprints = EPrints::EPrint::retrieve_eprints(
		$session,
		EPrints::Database::table_name( "inbox" ),
		[ "username LIKE \"$user->{username}\"" ] );

	if( $#eprints >= 0 )
	{
		print "<CENTER><H3>";	
		print $session->{lang}->phrase( "H:docs" );
		print "</H3></CENTER>\n";

		my @eprint_ids;
		my %eprint_titles;
		my $e;

		foreach $e (@eprints)
		{
			push @eprint_ids, $e->{eprintid};
			$eprint_titles{$e->{eprintid}} = $e->short_title();
		}

		my $set_field = EPrints::MetaField->new({
					name=>"eprint_id",
					type=>"set",
                                        displaylines=>6,
					options=>\@eprint_ids } );

		# If there is only one eprint in the workspace, select it by default
		my %default_values;
		$default_values{"eprint_id"} = $eprint_ids[0] if( scalar @eprints==1 );

		### Now put them in a form
		$session->{render}->render_form(
			[ $set_field ],
			\%default_values,
			0,
			0,
			EPrints::SubmissionForm::initial_actions($session),
			undef,
			"submit" );

		print "<P><CENTER><EM>";
		print $session->{lang}->phrase( "H:depositing" );
		print "</EM></CENTER></P>\n";
	}
	else
	{
		print $session->{render}->start_form( "submit" );
		print $session->{render}->hidden_field( "submit", "New" );
		print "<P><CENTER>";
		print $session->{render}->named_submit_button(
			$session->{lang}->phrase( "F:start_upload" ) );
		print "</CENTER></P>\n";
		print $session->{render}->end_form();
	}
}


######################################################################
#
# show_pending( $session, $user)
#
#  Show any items that are in the submissions buffer, if any
#
######################################################################

sub show_pending
{
	my( $session, $user ) = @_;

	### Get the items in the buffer
	my @eprints = EPrints::EPrint::retrieve_eprints(
		$session,
		EPrints::Database::table_name( "buffer" ),
		[ "username LIKE \"$user->{username}\"" ] );

	if( $#eprints >= 0 )
	{
		print "<CENTER><H3>";
		print $session->{lang}->phrase( "H:pending_title" );
		print "</H3></CENTER>\n";
		print "<CENTER><TABLE CELLPADDING=3 BORDER=0>\n";
		my $e;
		foreach $e (@eprints)
		{
			print "<TR><TD><EM>";
			print $e->short_title();
			print "</EM></TD><TD>";
			print $session->{lang}->phrase( 
				"H:deposited_at",
				{ time=>$session->{render}->format_field(
					$session->{metainfo}->find_table_field( "eprint", "datestamp" ),
					$e->{datestamp} ) } );
			print "</TD></TR>\n";
		}
		print "</TABLE></CENTER>\n";
	}
}

